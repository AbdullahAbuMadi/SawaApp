<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SawaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="NoActionBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">#E64AA4</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">4dp</item>
        <item name="android:strokeAlpha">0.75</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="NavigationDrawerTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!--    coloring themes-->
    <style name="PinkStyle" parent="NoActionBarTheme">
        <item name="IconTint">#E64AA4</item>
        <item name="buttonTint">#E64AA4</item>
        <item name="textColor">#E64AA4</item>
        <item name="endcolor">#FFAFDD</item>

    </style>

    <style name="BlueStyle" parent="NoActionBarTheme">
        <item name="IconTint">#0746F8</item>
        <item name="buttonTint">#FF3F60BC</item>
        <item name="textColor">#FF3F60BC</item>
        <item name="endcolor">#94ACEF</item>
    </style>

    <style name="DisabledCheckBoxesStyle">
        <item name="buttonTint">#707070</item>
        <item name="android:textColor">#707070</item>
    </style>

    <!--    attrs-->
    <attr name="IconTint" format="color" />
    <attr name="buttonTint" format="color" />
    <attr name="textColor" format="color" />
    <attr name="endcolor" format="color" />
</resources>